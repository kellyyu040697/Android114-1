<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imgLibraryBackground2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/library_outside"
        android:alpha="0.7" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="16dp">

            <Button
                android:id="@+id/btnB1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="B1"
                android:backgroundTint="@color/FloorBtn"
                android:textColor="@android:color/white"/>

            <Button
                android:id="@+id/btn1F"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1F"
                android:backgroundTint="@color/FloorBtn"
                android:textColor="@android:color/white"/>

            <Button
                android:id="@+id/btn2F"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2F"
                android:backgroundTint="@color/FloorBtn"
                android:textColor="@android:color/white"/>

            <Button
                android:id="@+id/btn3F"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3F"
                android:backgroundTint="@color/FloorBtn"
                android:textColor="@android:color/white"/>

            <Button
                android:id="@+id/btn4F"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="4F"
                android:backgroundTint="@color/FloorBtn"
                android:textColor="@android:color/white"/>

            <Button
                android:id="@+id/btn5F"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="5F"
                android:backgroundTint="@color/FloorBtn"
                android:textColor="@android:color/white"/>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
