<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- 標題 -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="真知教學大樓九樓"
        android:textSize="24sp"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp" />

    <!-- 顯示圖片 -->
    <ImageView
        android:id="@+id/sampleImage"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:src="@drawable/floor9"
        android:layout_below="@id/titleText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp" />

    <!-- 中間 TextView -->
    <LinearLayout
        android:id="@+id/twoColumnText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/sampleImage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/col1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="◆901\n◆902\n◆903\n◆904\n◆907\n◆908\n◆909\n◆912\n◆913\n◆914\n◆915\n◆916"
            android:textSize="20sp"
            android:paddingEnd="20dp"/>

        <TextView
            android:id="@+id/col2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="◆917\n◆918\n◆919\n◆920\n◆921\n◆924\n◆925\n◆926\n◆928\n◆929\n◆930\n◆931"
            android:textSize="20sp"/>
    </LinearLayout>

    <!-- 三顆按鈕區 -->
    <LinearLayout
        android:id="@+id/buttonLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:weightSum="3">

        <Button
            android:id="@+id/prevButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="上一樓" />

        <Button
            android:id="@+id/backButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="返回" />

        <Button
            android:id="@+id/nextButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="下一樓" />
    </LinearLayout>
</RelativeLayout>
